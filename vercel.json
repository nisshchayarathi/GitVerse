{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ],
  "env": {
    "DATABASE_URL": "@DATABASE_URL",
    "GEMINI_API_KEY": "@GEMINI_API_KEY",
    "JWT_SECRET": "@JWT_SECRET"
  }
}
